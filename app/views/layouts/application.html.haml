!!!5
%html
  %head
    %title G5radio
    = stylesheet_link_tag 'default'
    = csrf_meta_tag
  %body
    %header
      - if current_user
        .avatar
          = image_tag current_user.avatar
        %ul
          %li
            = link_to "@#{current_user.screen_name} logout", logout_path
      - else
        %ul
          %li
            = link_to 'Sign in with Twitter', '/auth/twitter'
    = yield
    %footer
